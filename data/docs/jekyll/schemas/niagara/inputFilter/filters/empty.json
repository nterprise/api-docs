{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/inputFilter/filters/empty.json",
  "type": "object",
  "description": "Filter to transform values into null. This is helpful when trying to make a value required",
  "required": [
    "type",
    "options"
  ],
  "properties": {
    "type": {
      "type": "string",
      "const": "empty"
    },
    "options": {
      "type": "object",
      "description": "empty filter has no options"
    }
  }
}
