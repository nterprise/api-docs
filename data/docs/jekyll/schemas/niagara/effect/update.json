{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/effect/notify.json",
  "type": "object",
  "description": "Effect which notifies a user",
  "additionalProperties": false,
  "required": [
    "effect_type",
    "options"
  ],
  "properties": {
    "effect_type": {
      "type": "string",
      "description": "Name of the effect type",
      "const": "notify"
    },
    "options": {
      "type": "object",
      "description": "Options for the effect",
      "required": [
        "entity",
        "property",
        "value"
      ],
      "properties": {
        "entity": {
          "$ref": "https://docs.nterprise.com/schemas/niagara/entityCommon.json#/properties/entity_type"
        },
        "property": {
          "type": "string",
          "description": "Entity property to update"
        },
        "value": {
          "type": "string",
          "description": "Value to set"
        }
      }
    }
  }
}
