{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/contact.json",
  "type": "object",
  "description": "Contact Information",
  "additionalProperties": false,
  "required": [
    "label"
  ],
  "properties": {
    "contact_id": {
      "type": "string",
      "description": "Identifier for the contact",
      "readOnly": true,
      "pattern": "^[0-9a-zA-Z-_]+$"
    },
    "label": {
      "$ref": "https://docs.nterprise.com/schemas/niagara/entityCommon.json#/properties/label"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email address"
    },
    "name": {
      "type": "string",
      "description": "Contact name"
    },
    "phone": {
      "type": "string",
      "description": "Phone number"
    }
  },
  "allOf": [
    {
      "$ref": "https://docs.nterprise.com/schemas/niagara/entityCommon.json"
    }
  ]
}
