{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/workOrder.json",
  "type": "object",
  "description": "Defines the properties for a unit",
  "additionalProperties": false,
  "required": [
    "label",
    "part",
    "unit_id",
    "work_order_type"
  ],
  "properties": {
    "work_order_id": {
      "type": "string",
      "description": "The identifier for the unit",
      "pattern": "^[0-9a-zA-Z-_]+$"
    },
    "label": {
      "$ref": "https://docs.nterprise.com/schemas/niagara/entityCommon.json#/properties/label"
    },
    "description": {
      "type": "string",
      "description": "Detailed description for the work order"
    },
    "work_order_type": {
      "type": "string",
      "description": "Type of work order",
      "enum": [
        "device"
      ]
    },
    "due_date": {
      "type": "string",
      "format": "date-time",
      "description": "End date"
    },
    "current_status": {
      "$ref": "https://docs.nterprise.com/schemas/niagara/status.json"
    },
    "project": {
      "$ref": "https://docs.nterprise.com/schemas/niagara/project.json"
    },
    "work_flows": {
      "type": "array",
      "description": "Cycles of work flows needed to complete the work order",
      "items": {
        "type": "object",
        "required": [
          "cycles_needed",
          "work_flow"
        ],
        "properties": {
          "cycles_needed": {
            "type": "integer",
            "description": "The number of cycles needed",
            "minimum": 1
          },
          "work_flow": {
            "$ref": "https://docs.nterprise.com/schemas/niagara/workFlow.json"
          }
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "https://docs.nterprise.com/schemas/niagara/entityCommon.json"
    },
    {
      "$ref": "https://docs.nterprise.com/schemas/niagara/dateRange.json"
    }
  ]
}
