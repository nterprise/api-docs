{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/resource.json",
  "type": "object",
  "description": "Defines the properties for a resource",
  "additionalProperties": false,
  "required": [
    "label",
    "resource_type",
    "location"
  ],
  "properties": {
    "resource_id": {
      "type": "string",
      "description": "The identifier for the resource",
      "pattern": "^[0-9a-zA-Z-_]+$"
    },
    "label": {
      "$ref": "https://docs.nterprise.com/schemas/niagara/entityCommon.json#/properties/label"
    },
    "resource_type": {
      "type": "string",
      "description": "Used to group resources together. Extensions or reports can then use the type for their needs. MUST be kebab-cased",
      "pattern": "^[a-z][0-9a-zA-Z-]+$"
    },
    "meta": {
      "type": "object",
      "description": "Data for the resource as a key value pair",
      "additionalProperties": {
        "type": "string"
      },
      "propertyNames": {
        "pattern": "^[A-Za-z][A-Za-z0-9_]*$"
      }
    },
    "location": {
      "$ref": "https://docs.nterprise.com/schemas/niagara/location.json"
    },
    "resource": {
      "type": "object",
      "description": "The parent resource if this is a child resource",
      "properties": {
        "resource_id": {
          "$ref": "https://docs.nterprise.com/schemas/niagara/resource.json#/properties/resource_id"
        },
        "label": {
          "$ref": "https://docs.nterprise.com/schemas/niagara/resource.json#/properties/label"
        },
        "resource_type": {
          "$ref": "https://docs.nterprise.com/schemas/niagara/resource.json#/properties/resource_type"
        },
        "meta": {
          "$ref": "https://docs.nterprise.com/schemas/niagara/resource.json#/properties/meta"
        },
        "location": {
          "$ref": "https://docs.nterprise.com/schemas/niagara/location.json"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "https://docs.nterprise.com/schemas/niagara/entityCommon.json"
    }
  ]
}
