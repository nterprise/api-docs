{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/program.json",
  "type": "object",
  "description": "Defines the properties for a program",
  "additionalProperties": false,
  "required": [
    "label",
    "customer",
    "program_id",
    "allowed_statuses"
  ],
  "properties": {
    "program_id": {
      "type": "string",
      "description": "Unique identifier",
      "pattern": "^[0-9a-zA-Z-_]+$"
    },
    "label": {
      "$ref": "https://docs.nterprise.com/schemas/niagara/entityCommon.json#/properties/label"
    },
    "customer": {
      "$ref": "https://docs.nterprise.com/schemas/niagara/customer.json"
    },
    "allowed_statuses": {
      "$ref": "https://docs.nterprise.com/schemas/niagara/customer.json#/properties/allowed_statuses"
    }
  },
  "allOf": [
    {
      "$ref": "https://docs.nterprise.com/schemas/niagara/entityCommon.json"
    },
    {
      "$ref": "https://docs.nterprise.com/schemas/niagara/dateRange.json"
    }
  ]
}
