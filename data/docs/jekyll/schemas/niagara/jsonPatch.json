{
  "title": "JSON schema for JSONPatch files",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/jsonPatch.json",
  "properties": {
    "operations": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "description": "The add operation",
            "additionalProperties": false,
            "required": [
              "value",
              "op",
              "path"
            ],
            "properties": {
              "path": {
                "$ref": "#/properties/path"
              },
              "op": {
                "description": "The add operation",
                "type": "string",
                "const": "add"
              },
              "value": {
                "description": "The value to add at the path"
              }
            }
          },
          {
            "type": "object",
            "description": "The replace operation",
            "additionalProperties": false,
            "required": [
              "value",
              "op",
              "path"
            ],
            "properties": {
              "path": {
                "$ref": "#/properties/path"
              },
              "op": {
                "description": "The replace operation",
                "type": "string",
                "const": "replace"
              },
              "value": {
                "description": "The value to replace at the path"
              }
            }
          },
          {
            "type": "object",
            "description": "The test operation",
            "additionalProperties": false,
            "required": [
              "value",
              "op",
              "path"
            ],
            "properties": {
              "path": {
                "$ref": "#/properties/path"
              },
              "op": {
                "description": "The test operation",
                "type": "string",
                "const": "test"
              },
              "value": {
                "description": "The value to test at the path"
              }
            }
          },
          {
            "type": "object",
            "description": "The remove operation",
            "additionalProperties": false,
            "required": [
              "op",
              "path"
            ],
            "properties": {
              "path": {
                "$ref": "#/properties/path"
              },
              "op": {
                "description": "The remove operation",
                "type": "string",
                "const": "remove"
              }
            }
          },
          {
            "type": "object",
            "description": "The move operation",
            "additionalProperties": false,
            "required": [
              "from",
              "op",
              "path"
            ],
            "properties": {
              "path": {
                "$ref": "#/properties/path"
              },
              "op": {
                "description": "The move operation",
                "type": "string",
                "const": "move"
              },
              "from": {
                "$ref": "#/properties/path",
                "description": "A JSON Pointer path pointing to the location to move from."
              }
            }
          },
          {
            "type": "object",
            "description": "The copy operation",
            "additionalProperties": false,
            "required": [
              "from",
              "op",
              "path"
            ],
            "properties": {
              "path": {
                "$ref": "#/properties/path"
              },
              "op": {
                "description": "The copy operation",
                "type": "string",
                "const": "copy"
              },
              "from": {
                "$ref": "#/properties/path",
                "description": "A JSON Pointer path pointing to the location to copy from."
              }
            }
          }
        ]
      }
    },
    "path": {
      "description": "A JSON Pointer path.",
      "type": "string"
    }
  }
}
