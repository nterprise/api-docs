{
  "description": "Oauth token exchange",
  "content": {
    "application/x-www-form-urlencoded": {
      "schema": {
        "properties": {
          "grant_type": {
            "type": "string",
            "enum": [
              "password",
              "authorization_code",
              "client_credentials"
            ]
          },
          "code": {
            "type": "string"
          },
          "client_id": {
            "type": "string"
          },
          "client_secret": {
            "type": "string"
          },
          "redirect_url": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "scope": {
            "type": "string"
          }
        }
      }
    }
  }
}
