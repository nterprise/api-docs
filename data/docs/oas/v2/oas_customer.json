{
  "openapi": "3.0.3",
  "x-api": "niagara",
  "x-nter-docs-parent": "Niagara API",
  "x-nter-docs-nav-order": 5,
  "x-nter-docs-redirect-from": [
    "/rel/customers",
    "/rel/batch-customer",
    "/rel/program-customer",
    "/rel/project-customer",
    "/rel/part-customer"
  ],
  "info": {
    "version": "2.0.0",
    "description": "Customers may have multiple Programs, Projects, and Locations, as well as device Parts and individual Units.",
    "title": "Customers"
  },
  "servers": [
    {
      "url": "https://{environment}.nterprise.com",
      "variables": {
        "environment": {
          "default": "api",
          "enum": [
            "api",
            "api.dev"
          ]
        }
      }
    }
  ],
  "paths": {
    "/customers": {
      "$ref": "./paths/customer/customers.json"
    },
    "/customers/{customer_id}": {
      "$ref": "./paths/customer/customer.json"
    },
    "/customers/{customer_id}/contacts": {
      "$ref": "./paths/customer/contacts.json"
    },
    "/customers/{customer_id}/programs": {
      "$ref": "./paths/customer/programs.json"
    }
  },
  "components": {
    "schemas": {
      "Customer": {
        "$ref": "components/schemas/customer.json"
      }
    }
  }
}
