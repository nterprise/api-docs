{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/inputFilter.json",
  "type": "array",
  "description": "Input Filters allow custom fields to be defined for entities",
  "items": {
    "type": "object",
    "description": "Input filter specification",
    "require": [
      "label",
      "key",
      "filter",
      "validators"
    ],
    "properties": {
      "label": {
        "type": "string",
        "description": "Human readable name",
        "example": "Serial Number",
        "x-examples": [
          "Serial Number",
          "Asset tag",
          "WiFi MAC address",
          "Bluetooh MAC address"
        ]
      },
      "key": {
        "type": "string",
        "description": "Slug used to store the property",
        "example": "serial-number",
        "x-examples": [
          "serial-number",
          "asset-tag",
          "wifi-mac-address",
          "bluetooh-mac-address"
        ],
        "readOnly": true,
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      },
      "filters": {
        "type": "array",
        "description": "A Collection of filters applied to the field",
        "maxItems": 100,
        "items": {
          "anyOf": [
            {
              "$ref": "./inputFilter/filters/allowed.json"
            },
            {
              "$ref": "./inputFilter/filters/camelCase.json"
            },
            {
              "$ref": "./inputFilter/filters/date.json"
            },
            {
              "$ref": "./inputFilter/filters/empty.json"
            },
            {
              "$ref": "./inputFilter/filters/float.json"
            },
            {
              "$ref": "./inputFilter/filters/kebabCase.json"
            },
            {
              "$ref": "./inputFilter/filters/lower.json"
            },
            {
              "$ref": "./inputFilter/filters/number.json"
            },
            {
              "$ref": "./inputFilter/filters/prefix.json"
            },
            {
              "$ref": "./inputFilter/filters/snakeCase.json"
            },
            {
              "$ref": "./inputFilter/filters/string.json"
            },
            {
              "$ref": "./inputFilter/filters/suffix.json"
            },
            {
              "$ref": "./inputFilter/filters/trim.json"
            },
            {
              "$ref": "./inputFilter/filters/upper.json"
            }
          ]
        }
      },
      "validators": {
        "type": "array",
        "description": "A set of validators to use for this field",
        "maxItems": 100,
        "items": {
          "anyOf": [
            {
              "$ref": "./inputFilter/validators/between.json"
            },
            {
              "$ref": "./inputFilter/validators/blackList.json"
            },
            {
              "$ref": "./inputFilter/validators/contains.json"
            },
            {
              "$ref": "./inputFilter/validators/emailAddress.json"
            },
            {
              "$ref": "./inputFilter/validators/endsWith.json"
            },
            {
              "$ref": "./inputFilter/validators/equals.json"
            },
            {
              "$ref": "./inputFilter/validators/greaterThan.json"
            },
            {
              "$ref": "./inputFilter/validators/hostName.json"
            },
            {
              "$ref": "./inputFilter/validators/ipAddress.json"
            },
            {
              "$ref": "./inputFilter/validators/length.json"
            },
            {
              "$ref": "./inputFilter/validators/lessThan.json"
            },
            {
              "$ref": "./inputFilter/validators/macAddress.json"
            },
            {
              "$ref": "./inputFilter/validators/mask.json"
            },
            {
              "$ref": "./inputFilter/validators/startsWith.json"
            },
            {
              "$ref": "./inputFilter/validators/step.json"
            },
            {
              "$ref": "./inputFilter/validators/uri.json"
            },
            {
              "$ref": "./inputFilter/validators/whiteList.json"
            }
          ]
        }
      }
    }
  },
  "example": {
    "$ref": "../examples/inputFilter.json"
  }
}
