{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/part.json",
  "type": "object",
  "description": "Defines the properties for a part",
  "additionalProperties": false,
  "required": [
    "label",
    "part_id",
    "customer",
    "manufacturer"
  ],
  "x-niagara-model": "Part",
  "properties": {
    "part_id": {
      "type": "string",
      "description": "Unique identifier",
      "example": "ec5db56d-32e6-4e5d-9bef-1016f3e13670",
      "x-examples": [
        "ec5db56d-32e6-4e5d-9bef-1016f3e13670"
      ],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "label": {
      "type": "string",
      "example": "10\" iPad",
      "x-examples": [
        "10\" iPad"
      ],
      "description": "Label for the part"
    },
    "slug": {
      "type": "string",
      "example": "10-ipad",
      "x-examples": [
        "10-ipad"
      ],
      "description": "Auto-generated slug for the part"
    },
    "customer": {
      "$ref": "./customer.json"
    },
    "manufacturer": {
      "type": "object",
      "description": "Manufacturer information for the part",
      "required": [
        "part_number"
      ],
      "properties": {
        "part_number": {
          "type": "string",
          "description": "Manufacturer part number",
          "example": "602-3075-01",
          "x-examples": [
            "602-3075-01"
          ]
        }
      },
      "allOf": [
        {
          "$ref": "./manufacturer.json"
        }
      ]
    },
    "serial_prefix": {
      "type": "string",
      "example": "S",
      "x-examples": [
        "S"
      ],
      "description": "A serial number prefix for the part"
    },
    "input_filter": {
      "$ref": "./inputFilter.json"
    }
  },
  "allOf": [
    {
      "x-niagara-raw-ref": "#/properties/entityCommon",
      "$ref": "./entityCommon.json"
    }
  ],
  "example": {
    "$ref": "../examples/part.json"
  }
}
