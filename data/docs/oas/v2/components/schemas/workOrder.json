{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/workOrder.json",
  "type": "object",
  "description": "Defines the properties for a unit",
  "additionalProperties": false,
  "required": [
    "label",
    "part",
    "unit_id",
    "work_order_type"
  ],
  "x-niagara-model": "WorkOrder",
  "properties": {
    "work_order_id": {
      "type": "string",
      "description": "The identifier for the unit",
      "example": "0f40ff8c-a3b5-4a30-90e5-0421c153183c",
      "x-examples": [
        "0f40ff8c-a3b5-4a30-90e5-0421c153183c"
      ],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "label": {
      "$ref": "./entityCommon.json#/properties/label"
    },
    "description": {
      "type": "string",
      "description": "Detailed description for the work order",
      "example": "Provision 150 devices for 123 Main St",
      "x-examples": [
        "Provision 150 devices for 123 Main St"
      ]
    },
    "work_order_type": {
      "type": "string",
      "description": "Type of work order",
      "example": "device",
      "x-examples": [
        "device"
      ],
      "enum": [
        "device"
      ]
    },
    "due_date": {
      "type": "string",
      "format": "date-time",
      "description": "End date",
      "example": "2020-08-07T18:10:53.000Z",
      "x-examples": [
        "2020-08-07T18:10:53.000Z"
      ]
    },
    "current_status": {
      "$ref": "./status.json"
    },
    "project": {
      "$ref": "./project.json"
    },
    "work_flows": {
      "type": "array",
      "description": "Cycles of work flows needed to complete the work order",
      "items": {
        "type": "object",
        "required": [
          "cycles_needed",
          "work_flow"
        ],
        "properties": {
          "cycles_needed": {
            "type": "integer",
            "description": "The number of cycles needed",
            "format": "int32",
            "example": 4,
            "x-examples": [
              4
            ]
          },
          "work_flow": {
            "$ref": "./workflow.json"
          }
        }
      }
    }
  },
  "allOf": [
    {
      "x-niagara-raw-ref": "#/properties/entityCommon",
      "$ref": "./entityCommon.json"
    },
    {
      "$ref": "./dateRange.json"
    }
  ],
  "example": {
    "$ref": "../examples/workOrder.json"
  }
}
