{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/contact.json",
  "type": "object",
  "description": "Contact Information",
  "additionalProperties": false,
  "required": [
    "label"
  ],
  "x-niagara-model": "Contact",
  "properties": {
    "contact_id": {
      "type": "string",
      "description": "Identifier for the contact",
      "readOnly": true,
      "example": "1c022258-afcd-4bf2-a576-ae59b7a15d73",
      "x-examples": [
        "1c022258-afcd-4bf2-a576-ae59b7a15d73"
      ],
      "pattern": "^[0-9a-zA-Z-_]+$"
    },
    "label": {
      "$ref": "./entityCommon.json#/properties/label"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email address",
      "example": "bob@zones.com",
      "x-examples": [
        "bob@zones.com"
      ]
    },
    "name": {
      "type": "string",
      "description": "Contact name",
      "example": "Bob Alice",
      "x-examples": [
        "Bob Alice"
      ]
    },
    "phone": {
      "type": "string",
      "description": "Phone number",
      "example": "+1 518 867 5309",
      "x-examples": [
        "+1 518 867 5309"
      ]
    }
  },
  "example": {
    "$ref": "../examples/contact.json"
  },
  "allOf": [
    {
      "x-niagara-raw-ref": "#/properties/entityCommon",
      "$ref": "./entityCommon.json"
    }
  ]
}
