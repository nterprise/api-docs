{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/customer.json",
  "type": "object",
  "description": "Customer",
  "additionalProperties": false,
  "required": [
    "label",
    "allowed_statuses"
  ],
  "x-niagara-model": "Customer",
  "properties": {
    "customer_id": {
      "type": "string",
      "description": "Customer identifier",
      "readOnly": true,
      "example": "e530652e-28e8-4f64-84af-e1cf0ff7c805",
      "x-examples": [
        "e530652e-28e8-4f64-84af-e1cf0ff7c805"
      ],
      "pattern": "^[0-9a-zA-Z-_]+$"
    },
    "label": {
      "$ref": "./entityCommon.json#/properties/label"
    },
    "external_platform": {
      "type": "object",
      "description": "External Identifiers for the customer",
      "deprecated": true,
      "patternProperties": {
        "^[A-Za-z][A-Za-z0-9_]*$": {
          "type": "string"
        }
      },
      "x-examples": [
        {
          "ax_customer_id": "eff3ada3-0966-42be-a5e8-78efd3c52d39"
        }
      ]
    },
    "allowed_statuses": {
      "type": "array",
      "description": "List of allowed statuses",
      "uniqueItems": true,
      "items": {
        "x-niagara-raw-ref": "#/properties/status",
        "$ref": "./status.json"
      }
    }
  },
  "allOf": [
    {
      "x-niagara-raw-ref": "#/properties/entityCommon",
      "$ref": "./entityCommon.json"
    }
  ],
  "example": {
    "$ref": "../examples/customer.json"
  }
}
