{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.nterprise.com/schemas/niagara/resource.json",
  "type": "object",
  "description": "Defines the properties for a resource",
  "additionalProperties": false,
  "required": [
    "label",
    "resource_type",
    "location"
  ],
  "x-niagara-model": "Resource",
  "properties": {
    "resource_id": {
      "type": "string",
      "description": "The identifier for the resource",
      "example": "3c730679-dcfa-4b5a-8f6e-b76fe80c6078",
      "x-examples": [
        "3c730679-dcfa-4b5a-8f6e-b76fe80c6078"
      ],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "label": {
      "$ref": "./entityCommon.json#/properties/label"
    },
    "resource_type": {
      "type": "string",
      "description": "Used to group resources together. Extensions or reports can then use the type for their needs. MUST be kebab-cased",
      "pattern": "^[a-z][0-9a-zA-Z-]+$",
      "example": "station",
      "x-examples": [
        "station"
      ]
    },
    "meta": {
      "type": "object",
      "description": "Data for the resource as a key value pair",
      "additionalProperties": {
        "type": "string"
      },
      "propertyNames": {
        "pattern": "^[A-Za-z][A-Za-z0-9_]*$"
      },
      "x-examples": [
        {
          "power": "50w"
        }
      ]
    },
    "location": {
      "$ref": "./location.json"
    },
    "resource": {
      "type": "object",
      "description": "The parent resource if this is a child resource",
      "properties": {
        "resource_id": {
          "$ref": "./resource.json#/properties/resource_id"
        },
        "label": {
          "$ref": "./resource.json#/properties/label"
        },
        "resource_type": {
          "$ref": "./resource.json#/properties/resource_type"
        },
        "meta": {
          "$ref": "./resource.json#/properties/meta"
        },
        "location": {
          "$ref": "./location.json"
        }
      }
    }
  },
  "allOf": [
    {
      "x-niagara-raw-ref": "#/properties/entityCommon",
      "$ref": "./entityCommon.json"
    }
  ],
  "example": {
    "$ref": "../examples/resource.json"
  }
}
