{
  "type": "function",
  "options": {
    "function": "confirm-action",
    "payload": {
      "part_id": "$.workorder.parts[0]",
      "qty": 4,
      "program_id": "$.workorder.project.project_id",
      "allow_scarcity": false,
      "force": false,
      "status": "Reticulating splines"
    }
  },
  "label": "Find units",
  "goto": "complete",
  "goto-fail": "process-fail",
  "context": [
    {
      "key": "$.unit.status",
      "value": "Pending",
      "lock": false,
      "ignore": true
    },
    {
      "key": "extract_fields",
      "value": "Pending",
      "lock": false,
      "ignore": true
    },
    {
      "key": "$.unit.status",
      "value": "$.buzz",
      "lock": true,
      "ignore": false
    },
    {
      "key": "$.fizz",
      "value": "Pending",
      "lock": true,
      "ignore": false
    }
  ],
  "onError": {
    "finally": {
      "goto": "failed",
      "actions": [
        {
          "type": "email",
          "options": {
            "to": "bob@example.com",
            "from": "alice@example.com"
          }
        },
        {
          "type": "email",
          "options": {
            "to": "bob@example.com",
            "from": "alice@example.com"
          }
        },
        {
          "type": "email",
          "options": {
            "to": "bob@example.com",
            "from": "alice@example.com"
          }
        }
      ]
    },
    "retry": 4
  },
  "onComplete": {
    "actions": [
      {
        "type": "email",
        "options": {
          "to": "bob@example.com",
          "from": "alice@example.com"
        }
      },
      {
        "type": "email",
        "options": {
          "to": "bob@example.com",
          "from": "alice@example.com"
        }
      }
    ]
  }
}