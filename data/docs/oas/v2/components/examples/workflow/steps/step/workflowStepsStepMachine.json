{
  "type": "wait",
  "label": "Run Application",
  "goto": "complete",
  "options": {
    "application": {
      "application_id": "ace-ios",
      "platforms": [
        {
          "platform": "aix",
          "arch": "mipsel"
        },
        {
          "platform": "linux",
          "arch": "ppc64"
        },
        {
          "platform": "sunos",
          "arch": "x64"
        },
        {
          "platform": "linux",
          "arch": "mips"
        },
        {
          "platform": "openbsd",
          "arch": "x32"
        }
      ]
    },
    "configuration": true
  },
  "goto-fail": "process-fail",
  "context": [
    {
      "key": "extract_fields",
      "value": "Pending",
      "lock": false,
      "ignore": true
    },
    {
      "key": "$.fizz",
      "value": "$.buzz",
      "lock": true,
      "ignore": false
    }
  ],
  "onError": {
    "finally": {
      "goto": "failed",
      "actions": [
        {
          "type": "email",
          "options": {
            "to": "bob@example.com",
            "from": "alice@example.com"
          }
        },
        {
          "type": "email",
          "options": {
            "to": "bob@example.com",
            "from": "alice@example.com"
          }
        },
        {
          "type": "email",
          "options": {
            "to": "bob@example.com",
            "from": "alice@example.com"
          }
        }
      ]
    },
    "retry": 8
  },
  "onComplete": {
    "actions": [
      {
        "type": "email",
        "options": {
          "to": "bob@example.com",
          "from": "alice@example.com"
        }
      },
      {
        "type": "email",
        "options": {
          "to": "bob@example.com",
          "from": "alice@example.com"
        }
      }
    ]
  }
}