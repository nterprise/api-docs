{
  "description": "A paged response for locations",
  "content": {
    "application/hal+json": {
      "schema": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "_embedded",
          "_links",
          "total_count",
          "limit",
          "offset"
        ],
        "properties": {
          "total_count": {
            "type": "number",
            "readOnly": true
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100
          },
          "offset": {
            "type": "string",
            "nullable": true
          },
          "_embedded": {
            "type": "object",
            "properties": {
              "nter:locations": {
                "type": "array",
                "maxItems": 100,
                "items": {
                  "$ref": "../schemas/halLocation.json"
                }
              }
            }
          },
          "_links": {
            "type": "object",
            "required": [
              "self"
            ],
            "properties": {
              "self": {
                "$ref": "../schemas/link.json"
              },
              "next": {
                "$ref": "../schemas/link.json"
              }
            }
          }
        }
      },
      "example": {
        "total_count": 21,
        "limit": 42,
        "offset": "next-offset",
        "_embedded": {
          "nter:locations": [
            {
              "location_id": "location",
              "label": "Test Label",
              "created": "2019-08-19T00:01:02.000Z",
              "updated": "2020-08-19T01:01:02.000Z",
              "location_type": "warehouse",
              "formatted_address": "Test Label\n431 Broadway Suite c\nMenands NY 12204 USA",
              "address": {
                "country": "USA",
                "administrative_area": "NY",
                "sub_administrative_area": "Albany",
                "locality": "Menands",
                "postal_code": "12204",
                "thoroughfare": "431 Broadway",
                "premise": "Suite c",
                "sub_premise": "ZIC"
              },
              "input_filter": [],
              "_links": {
                "nter:location-resources": {
                  "href": "https://api.example.com/locations/location/resources"
                },
                "self": {
                  "href": "https://api.example.com/locations/location"
                }
              }
            }
          ]
        },
        "_links": {
          "next": {
            "href": "https://api.example.com/locations?limit=42&offset=next-offset"
          },
          "self": {
            "href": "https://api.example.com/locations?limit=42"
          }
        }
      }
    }
  }
}
