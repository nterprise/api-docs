{
  "description": "A paged response for notes",
  "content": {
    "application/hal+json": {
      "schema": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "_embedded",
          "_links",
          "total_count",
          "limit",
          "offset"
        ],
        "properties": {
          "total_count": {
            "type": "number",
            "readOnly": true
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100
          },
          "offset": {
            "type": "string",
            "nullable": true
          },
          "_embedded": {
            "type": "object",
            "properties": {
              "nter:notes": {
                "type": "array",
                "maxItems": 100,
                "items": {
                  "$ref": "../schemas/halNote.json"
                }
              }
            }
          },
          "_links": {
            "type": "object",
            "properties": {
              "self": {
                "x-example": {
                  "href": "https://api.nterprise.com/notes"
                },
                "$ref": "../schemas/link.json"
              },
              "next": {
                "x-example": {
                  "href": "https://api.nterprise.com/notes?offset=QVBrO2wm13iEyl&limit=100"
                },
                "$ref": "../schemas/link.json"
              }
            }
          }
        }
      },
      "example": {
        "total_count": 21,
        "limit": 42,
        "offset": "next-offset",
