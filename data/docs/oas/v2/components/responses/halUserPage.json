{
  "description": "A paged response for users",
  "content": {
    "application/hal+json": {
      "schema": {
        "type": "object",
        "required": [
          "_embedded",
          "_links",
          "total_count",
          "limit",
          "offset"
        ],
        "properties": {
          "total_count": {
            "type": "number",
            "readOnly": true
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100
          },
          "offset": {
            "type": "string",
            "nullable": true
          },
          "_embedded": {
            "type": "object",
            "properties": {
              "nter:users": {
                "type": "array",
                "maxItems": 100,
                "items": {
                  "$ref": "../schemas/halUser.json"
                }
              }
            }
          },
          "_links": {
            "type": "object",
            "properties": {
              "self": {
                "$ref": "../schemas/link.json"
              },
              "next": {
                "$ref": "../schemas/link.json"
              }
            }
          }
        }
      },
      "example": {
