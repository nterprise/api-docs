{
  "openapi": "3.0.3",
  "x-api": "niagara",
  "x-parent": "Niagara API",
  "info": {
    "version": "2.0.0",
    "description": "API for the nterprise application",
    "title": "Projects"
  },
  "servers": [
    {
      "url": "https://{environment}.nterprise.com",
      "variables": {
        "environment": {
          "default": "api",
          "enum": [
            "api",
            "api.dev"
          ]
        }
      }
    }
  ],
  "paths": {
    "/projects": {
      "$ref": "./paths/project/projects.json"
    },
    "/projects/project_id": {
      "$ref": "./paths/project/project.json"
    },
    "/projects/{project_id}/work-orders": {
      "$ref": "./paths/project/workOrders.json"
    }
  },
  "components": {
    "schemas": {
      "Project": {
        "$ref": "https://docs.nterprise.com/schemas/niagara/project.json"
      }
    }
  }
}
