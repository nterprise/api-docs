{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "A Site",
  "type": "object",
  "required": [
    "siteName"
  ],
  "properties": {
    "site_id": {
      "description": "The Site Id",
      "readOnly": true,
      "type": "number",
      "format": "int32",
      "minimum": 0
    },
    "project_id": {
      "description": "The Project Id",
      "readOnly": true,
      "type": "number",
      "format": "int32",
      "minimum": 0
    },
    "customer_id": {
      "description": "The Customer Id",
      "readOnly": true,
      "type": "number",
      "format": "int32",
      "minimum": 0
    },
    "siteName": {
      "description": "Customer unique site name",
      "type": "string",
      "example": "Site 196"
    },
    "siteLabel": {
      "description": "Site label",
      "type": "string",
      "example": "Zones"
    },
    "siteGroup": {
      "description": "Site group",
      "type": "string",
      "example": "Group A"
    },
    "addr1": {
      "description": "Address line 1",
      "type": "string",
      "example": "Town Squire Pl"
    },
    "addr2": {
      "description": "Address line 2",
      "type": "string",
      "example": "329 Glenmont Rd"
    },
    "city": {
      "description": "The city",
      "type": "string",
      "example": "Glenmont"
    },
    "state": {
      "description": "The state",
      "type": "string",
      "example": "NY"
    },
    "zip": {
      "description": "The zip/postal code",
      "type": "string",
      "example": "12345"
    },
    "country": {
      "description": "The country",
      "type": "string",
      "example": "US"
    },
    "lng": {
      "description": "The longitude coordinates",
      "type": "float",
      "example": -73.7831,
      "minimum": -180,
      "maximum": 180
    },
    "lat": {
      "description": "The latitude coordinates",
      "type": "float",
      "example": 42.6014,
      "minimum": -180,
      "maximum": 180
    },
    "sTZ": {
      "description": "Site based time zone",
      "type": "string",
      "example": "America/New_York"
    },
    "contactName": {
      "description": "Site contact name",
      "type": "string",
      "example": "Carlo DiLorenzo"
    },
    "contactPhone": {
      "description": "Site contact phone number",
      "type": "string",
      "example": "(555) 555-5555 "
    },
    "contactEmail": {
      "description": "Site contact email",
      "type": "string",
      "example": "(555) 555-5555 "
    }
  }
}
