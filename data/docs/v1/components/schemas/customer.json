{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "A Customer",
  "type": "object",
  "required": [
    "cName"
  ],
  "properties": {
    "customer_id": {
      "description": "The Customer Id",
      "readOnly": true,
      "type": "number",
      "format": "int32",
      "minimum": 0
    },
    "cName": {
      "description": "The name of the customer",
      "type": "string",
      "example": "Zones"
    },
    "total_projects": {
      "description": "Total Projects for the customer",
      "type": "number",
      "format": "int32",
      "readOnly": true,
      "minimum": 0
    },
    "total_sites": {
      "description": "Total Sites for the customer",
      "type": "number",
      "format": "int32",
      "readOnly": true,
      "minimum": 0
    }
  }
}
