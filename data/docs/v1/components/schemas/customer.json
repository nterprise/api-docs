{
  "description": "A Customer",
  "type": "object",
  "required": [
    "cName"
  ],
  "properties": {
    "customer_id": {
      "description": "The Customer Id",
      "readOnly": true,
      "type": "string"
    },
    "cName": {
      "description": "The name of the customer",
      "type": "string",
      "example": "Zones",
      "readOnly": true
    },
    "total_projects": {
      "description": "Total Projects for the customer",
      "type": "number",
      "format": "int32",
      "readOnly": true,
      "minimum": 0,
      "example": 42
    },
    "total_sites": {
      "description": "Total Sites for the customer",
      "type": "number",
      "format": "int32",
      "readOnly": true,
      "minimum": 0,
      "example": 84
    }
  }
}
