{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "A paged array of inventories",
  "content": {
    "application/vnd.nterprise.collection.inventory.v1+json": {
      "schema": {
        "properties": {
          "_embedded": {
            "type": "object",
            "properties": {
              "inventory": {
                "type": "array",
                "items": {
                  "type": "object",
                  "allOf": [
                    {
                      "$ref": "/v1/components/schemas/inventory.json"
                    },
                    {
                      "$ref": "/v1/components/schemas/linkSelf.json"
                    }
                  ]
                }
              }
            }
          }
        },
        "allOf": [
          {
            "$ref": "/v1/components/schemas/pagePagination.json"
          }
        ]
      }
    }
  }
}
