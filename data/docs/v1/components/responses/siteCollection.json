{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "A paged array of sites",
  "content": {
    "application/vnd.nterprise.collection.sites.v1+json": {
      "schema": {
        "properties": {
          "_embedded": {
            "type": "object",
            "properties": {
              "projects": {
                "type": "array",
                "items": {
                  "type": "object",
                  "allOf": [
                    {
                      "$ref": "/v1/components/schemas/site.json"
                    },
                    {
                      "$ref": "/v1/components/schemas/linkNterCurie.json"
                    },
                    {
                      "$ref": "/v1/components/schemas/linkSelf.json"
                    },
                    {
                      "$ref": "/v1/components/schemas/siteLinks.json"
                    }
                  ]
                }
              }
            }
          }

        },
        "allOf": [
          {
            "$ref": "/v1/components/schemas/pagePagination.json"
          }
        ]
      }
    }
  }
}
