{
  "operationId": "fetchAllPrograms",
  "summary": "Fetches A Page of programs",
  "description": "Fetch Program",
  "tags": [
    "Program"
  ],
  "parameters": [
    {"$ref": "../../../components/parameters/limit.json"},
    {"$ref": "../../../components/parameters/offset.json"},
    {
      "schema": {
        "enum": [
          "label",
          "-label",
          "start_date",
          "-start_date",
          "end_date",
          "-end_date",
          "created",
          "-created",
          "updated",
          "-updated",
          "customer",
          "-customer"
        ]
      },
      "$ref": "../../../components/parameters/sort.json"
    },
    {
      "name": "filter",
      "in": "query",
      "description": "Filter results",
      "style": "deepObject",
      "explode": true,
      "schema": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "customer_id": {
            "type": "string",
            "description": "Filters programs for this customer",
            "example": "32e91e84-2b51-4c90-b4c1-522bedc6f01d"
          },
          "label": {
            "type": "string",
            "description": "Filters programs which are like this name",
            "example": "32e91e84-2b51-4c90-b4c1-522bedc6f01d"
          }
        }
      }
    }
  ],
  "responses": {
    "200": {
      "$ref": "../../../components/responses/programPage.json",
      "links": {
        "program": {
          "operationId": "fetchProgramById",
          "description": "Load details for a program in the response",
          "parameters": {
            "program_id": "$response._embedded.nter:programs[*].program_id"
          }
        }
      }
    },
    "401": {
      "description": "Authorization invalid",
      "$ref": "../../../components/responses/unauthorized.json"
    },
    "403": {
      "description": "You are not allowed to fetch all the programs",
      "$ref": "../../../components/responses/forbidden.json"
    }
  }
}
