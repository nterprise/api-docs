{
  "operationId": "createPartDefinition",
  "summary": "Creates a part definition",
  "description": "Creates a new part definition following the part definition schema",
  "tags": [
    "Part Definition"
  ],
  "requestBody": {
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "required": [
            "customer_id",
            "part_number",
            "label",
            "manufacturer_id"
          ],
          "properties": {
            "customer_id": {
              "readOnly": false,
              "$ref": "../../../components/schemas/customer.json#/properties/customer_id"
            },
            "part_number": {
              "$ref": "../../../components/schemas/partDefinition.json#/properties/part_number"
            },
            "label": {
              "$ref": "../../../components/schemas/partDefinition.json#/properties/label"
            },
            "manufacturer_id": {
              "readOnly": false,
              "$ref": "../../../components/schemas/manufacturer.json#/properties/manufacturer_id"
            },
            "input_filter": {
              "$ref": "../../../components/schemas/partDefinition.json#/properties/input_filter"
            }
          }
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "The created part definition",
      "$ref": "../../../components/responses/partDefinition.json"
    },
    "400": {
      "description": "Invalid part definition supplied in request",
      "$ref": "../../../components/responses/badRequest.json"
    },
    "401": {
      "description": "Authorization invalid",
      "$ref": "../../../components/responses/unauthorized.json"
    },
    "403": {
      "description": "You are not allowed to create a part definitions",
      "$ref": "../../../components/responses/forbidden.json"
    },
    "409": {
      "description": "Part definition conflicts with another part definition",
      "$ref": "../../../components/responses/conflict.json"
    }
  }
}
