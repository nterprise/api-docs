{
  "operationId": "authorize",
  "summary": "OAuth Authorization",
  "tags": [
    "OAuth",
    "Authentication"
  ],
  "servers": [
    {
      "url": "https://{auth}.nterprise.com",
      "variables": {
        "auth": {
          "default": "api",
          "enum": [
            "auth",
            "auth.dev",
            "auth.staging"
          ]
        }
      }
    }
  ],
  "security": [],
  "requestBody": {
    "$ref": "/v2/components/requestBodies/authorize.json"
  },
  "responses": {
    "400": {
      "$ref": "/v2/components/responses/badRequest.json"
    },
    "404": {
      "$ref": "/v2/components/responses/notFound.json"
    },
    "302": {
      "description": "Authorization endpoint for oauth",
      "headers": {
        "Location": {
          "schema": {
            "type": "string",
            "example": "https://auth.nterprise.com/auth"
          }
        }
      }
    }
  }
}
