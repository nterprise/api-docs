{
  "operationId": "exchangeToken",
  "summary": "OAuth code exchange",
  "description": "Fetches the current user information",
  "tags": [
    "OAuth",
    "Authentication"
  ],
  "requestBody": {
    "$ref": "/v2/components/requestBodies/code.json"
  },
  "security": [],
  "servers": [
    {
      "url": "https://{auth}.nterprise.com",
      "variables": {
        "auth": {
          "default": "api",
          "enum": [
            "auth",
            "auth.dev",
            "auth.staging"
          ]
        }
      }
    }
  ],
  "responses": {
    "200": {
      "description": "Entry point for the application",
      "content": {
        "application/json": {
          "schema": {
            "allOf": [
              {
                "$ref": "/v2/components/schemas/token.json"
              }
            ]
          }
        }
      }
    }
  }
}
