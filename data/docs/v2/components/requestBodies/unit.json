{
  "description": "The unit to create",
  "content": {
    "application/json": {
      "schema": {
        "type": "object",
        "required": [
          "part_id",
          "label"
        ],
        "properties": {
          "part_id": {
            "$ref": "../../components/schemas/part.json#/properties/part_id"
          },
          "customer_id": {
            "$ref": "../../components/schemas/customer.json#/properties/customer_id"
          },
          "label": {
            "$ref": "../../components/schemas/unit.json#/properties/label"
          },
          "manufacturer_id": {
            "readOnly": false,
            "description": "Id for the units manufacturer.  Read from the part if not set",
            "$ref": "../../components/schemas/manufacturer.json#/properties/manufacturer_id"
          },
          "vendor_id": {
            "readOnly": false,
            "description": "Id for the units vendor",
            "$ref": "../../components/schemas/manufacturer.json#/properties/manufacturer_id"
          },
          "input_filter": {
            "$ref": "../../components/schemas/unit.json#/properties/input_filter"
          }
        }
      }
    }
  }
}
