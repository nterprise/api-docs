{
  "description": "A paged response for customers",
  "content": {
    "application/hal+json": {
      "schema": {
        "properties": {
          "_embedded": {
            "type": "object",
            "properties": {
              "nter:customers": {
                "type": "array",
                "maxItems": 100,
                "items": {
                  "$ref": "../schemas/hal/halCustomer.json"
                }
              }
            }
          }
        },
        "allOf": [
          {
            "$ref": "../schemas/hal/halPaginationOffset.json"
          }
        ]
      }
    }
  }
}
