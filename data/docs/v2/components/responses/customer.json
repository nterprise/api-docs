{
  "description": "Customer response",
  "content": {
    "application/hal+json": {
      "schema": {
        "type": "object",
        "properties": {
          "_embedded": {
            "type": "object",
            "properties": {
              "nter:contacts": {
                "type": "array",
                "items": {
                  "type": "object",
                  "description": "Contact Information",
                  "properties": {
                    "_links": {
                      "properties": {
                        "self": {
                          "example": "https://api.nterprise.com/contacts/1c022258-afcd-4bf2-a576-ae59b7a15d73"
                        }
                      }
                    }
                  },
                  "allOf": [
                    {
                      "$ref": "../schemas/contact.json"
                    },
                    {
                      "$ref": "../schemas/linkSelf.json"
                    }
                  ]
                }
              },
              "nter:created-by": {
                "type": "array",
                "maxItems": 1,
                "items": {
                  "type": "object",
                  "description": "User who created the customer",
                  "properties": {
                    "_links": {
                      "properties": {
                        "self": {
                          "type": "object",
                          "properties":{
                            "href": {
                              "example": "https://api.nterprise.com/users/1c022258-afcd-4bf2-a576-ae59b7a15d73"
                            }
                          }
                        }
                      }
                    }
                  },
                  "allOf": [
                    {
                      "$ref": "../schemas/user.json"
                    },
                    {
                      "$ref": "../schemas/linkUser.json"
                    },
                    {
                      "$ref": "../schemas/linkSelf.json"
                    }
                  ]
                }
              }
            }
          }
        },
        "allOf": [
          {
            "$ref": "../schemas/customer.json"
          },
          {
            "properties": {
              "_links": {
                "properties": {
                  "self": {
                    "example": "https://api.nterprise.com/customers/e530652e-28e8-4f64-84af-e1cf0ff7c805"
                  },
                  "nter:customers-contacts": {
                    "type": "object",
                    "description": "Link to the /customers{/customer_id}/contact endpoint",
                    "readOnly": true,
                    "properties": {
                      "href": {
                        "type": "string",
                        "format": "url",
                        "readOnly": true,
                        "example": "https://api.nterprise.com/customers/e530652e-28e8-4f64-84af-e1cf0ff7c805/contacts"
                      }
                    }
                  }
                }
              }
            },
            "allOf": [
              {
                "$ref": "../schemas/linkSelf.json"
              }
            ]
          }
        ]
      }
    }
  }
}
