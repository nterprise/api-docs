{
  "x-id": "#workflow",
  "type": "object",
  "description": "Workflow",
  "required": [
    "steps",
    "starts_at",
    "label",
    "workflow_id",
    "applies_to"
  ],
  "example": {
    "$ref": "./examples/workflow.json"
  },
  "properties": {
    "workflow_id": {
      "type": "string",
      "description": "Customer identifier",
      "example": "e530652e-28e8-4f64-84af-e1cf0ff7c805",
      "readOnly": true,
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "label": {
      "example": "MLTI iPad Assembly Assignment",
      "description": "Label for the workflow"
    },
    "slug": {
      "example": "mlti-ipad-assembly-assignment"
    },
    "version": {
      "type": "string",
      "description": "Version of the workflow schema used",
      "enum": [
        "1.0"
      ],
      "example": "1.0"
    },
    "workflow_version": {
      "type": "number",
      "format": "int",
      "example": 7,
      "readOnly": true,
      "description": "Version number for the workflows (the number of times it has been changed"
    },
    "applies_to": {
      "type": "string",
      "description": "The entity type this work flow applies too",
      "enum": [
        "unit",
        "part",
        "program",
        "project",
        "customer",
        "contact"
      ],
      "example": "unit"
    },
    "starts_at": {
      "type": "string",
      "description": "Starting step"
    },
    "context": {
      "type": "array",
      "items": {
        "$ref": "./context.json"
      }
    },
    "steps": {
      "type": "object",
      "description": "Steps for the workflow",
      "additionalProperties": {
        "type": "object",
        "anyOf": [
          {
            "$ref": "./stepFunction.json"
          },
          {
            "$ref": "./stepChoices.json"
          },
          {
            "$ref": "./stepPass.json"
          },
          {
            "$ref": "./stepUser.json"
          },
          {
            "$ref": "./stepWait.json"
          },
          {
            "$ref": "./stepSuccess.json"
          },
          {
            "$ref": "./stepFail.json"
          }
        ]
      },
      "example": {
        "step-one": {
          "type": "function"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "./entityCommon.json"
    }
  ]
}
