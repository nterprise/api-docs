{
  "description": "Defines the properties for a part",
  "properties": {
    "part_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier",
      "example": "ec5db56d-32e6-4e5d-9bef-1016f3e13670",
      "readOnly": true,
      "pattern": "[0-9a-fA-F]{8}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{12}"
    },
    "customer": {
      "type": "object",
      "description": "The customer this  is for",
      "allOf": [
        {
          "$ref": "./customer.json"
        }
      ]
    },
    "label": {
      "type": "string",
      "description": "Label for the part assigned from the manufacturer",
      "example": "iPod touch (32GB) - Blue"
    },
    "total_workflows": {
      "type": "number",
      "description": "Total number of workflows this part belongs too",
      "example": 42,
      "readOnly": true
    },
    "workflows": {
      "type": "array",
      "description": "List of the top five workflows this part belongs too",
      "readOnly": true,
      "maxItems": 5,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the workflow",
            "example": "iPod configuration"
          }
        }
      }
    },
    "manufacturer": {
      "type": "object",
      "description": "Manufacturer information for the part",
      "properties": {
        "part_number": {
          "type": "string",
          "description": "Manufacturer part number",
          "example": "602-3075-01"
        }
      },
      "allOf": [
        {
          "$ref": "./manufacturer.json"
        }
      ]
    },
    "vendor": {
      "type": "object",
      "description": "Vendor information for the part",
      "properties": {
        "part_number": {
          "type": "string",
          "description": "Vendor part number",
          "example": "602-3075-01"
        }
      },
      "allOf": [
        {
          "$ref": "./vendor.json"
        }
      ]
    },
    "input_filter": {
      "type": "array",
      "items": {
        "type": "object",
        "allOf": [
          {
            "$ref": "./inputFilterSpecification.json"
          }
        ]
      }
    }
  }
}
