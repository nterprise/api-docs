{
  "type": "object",
  "description": "A step which run at certain times",
  "required": [
    "stop_at",
    "time"
  ],
  "properties": {
    "label": {
      "example": "Wait for cable",
      "x-examples": [
        "Wait for cable"
      ],
      "allOf": [
        {
          "$ref": "./stepCommon.json#/properties/label"
        }
      ]
    },
    "type": {
      "x-examples": [
        "wait"
      ],
      "example": "wait"
    },
    "stop_at": {
      "type": "integer",
      "description": "Time in seconds to stop this task",
      "maximum": 900,
      "minimum": 1
    },
    "time": {
      "type": "integer",
      "description": "Time to wait before checking this step",
      "example": 600,
      "maximum": 900,
      "minimum": 1
    },
    "listen_for": {
      "type": "array",
      "description": "List of events and conditions to listen for to trigger",
      "items": {
        "type": "object",
        "required": [
          "event"
        ],
        "properties": {
          "event": {
            "type": "string",
            "description": "Name of the event to listen for",
            "allOf": [
              {
                "$ref": "../../entityHelper.json#/properties/entity_events"
              }
            ]
          },
          "event_value": {
            "type": "object",
            "description": "The event conditions that have to be met",
            "allOf": [
              {
                "$ref": "./stepChoice.json"
              }
            ]
          }
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "./stepCommon.json"
    }
  ]
}
