{
  "x-id": "#batch",
  "x-nter-relation": "batches",
  "x-nter-model": "Batch",
  "x-nter-callable": true,
  "description": "Defines the properties for a work order batch",
  "required": [
    "label",
    "queue"
  ],
  "properties": {
    "batch_id": {
      "type": "string",
      "description": "The identifier for the batch",
      "example": "59c834ad-d9cc-4e0f-a569-8f4e52c351b9",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "queue": {
      "$ref": "./queue.json"
    },
    "order": {
      "type": "integer",
      "description": "Order for the queue",
      "example": 1,
      "format": "int32"
    },
    "users": {
      "type": "array",
      "description": "Users assigned to this batch",
      "maximum": 100,
      "items": {
        "$ref": "./user.json"
      }
    },
    "number_cycles": {
      "type": "integer",
      "description": "The number of cycles for this batch",
      "format": "int32",
      "example": 20
    },
    "cycles": {
      "type": "object",
      "readOnly": true,
      "properties": {
        "pending": {
          "type": "integer",
          "description": "The number of cycles pending",
          "format": "int32",
          "readOnly": true,
          "example": 13
        },
        "in_progress": {
          "type": "integer",
          "description": "The number of cycles in progress",
          "format": "int32",
          "readOnly": true,
          "example": 2
        },
        "verifying": {
          "type": "integer",
          "description": "The number of cycles verifying",
          "format": "int32",
          "readOnly": true,
          "example": 1
        },
        "complete": {
          "type": "integer",
          "description": "The number of cycles complete",
          "format": "int32",
          "readOnly": true,
          "example": 4
        },
        "blocked": {
          "type": "integer",
          "description": "The number of cycles blocked",
          "format": "int32",
          "readOnly": true,
          "example": 0
        },
        "cancelled": {
          "type": "integer",
          "description": "The number of cycles cancelled",
          "format": "int32",
          "readOnly": true,
          "example": 0
        }
      }
    },
    "work_order": {
      "$ref": "./workOrder.json"
    },
    "created": {
      "$ref": "./entityCommon.json#/properties/created"
    },
    "updated": {
      "$ref": "./entityCommon.json#/properties/updated"
    }
  }
}
