{
  "x-id": "#resource",
  "x-nter-relation": "location-resources",
  "x-nter-model": "Resource",
  "x-nter-callable": true,
  "description": "Defines the properties for a unit",
  "required": [
    "label",
    "location"
  ],
  "properties": {
    "resource_id": {
      "type": "string",
      "description": "The identifier for the resource",
      "example": "3c730679-dcfa-4b5a-8f6e-b76fe80c6078",
      "readOnly": true,
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "label": {
      "example": "Server room",
      "description": "Name of the resource"
    },
    "meta": {
      "type": "object",
      "description": "Data for the resource as a key value pair",
      "additionalProperties": {
        "type": "string"
      },
      "example": {
        "power": "50w"
      }
    },
    "location": {
      "$ref": "./location.json"
    }
  },
  "allOf": [
    {
      "$ref": "./entityCommon.json"
    }
  ]
}
