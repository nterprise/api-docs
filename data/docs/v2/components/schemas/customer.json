{
  "x-id": "#customer",
  "description": "Customer",
  "required": [
    "label",
    "customer_id",
    "status_map"
  ],
  "properties": {
    "customer_id": {
      "type": "string",
      "description": "Customer identifier",
      "example": "e530652e-28e8-4f64-84af-e1cf0ff7c805",
      "readOnly": true,
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "label": {
      "example": "Zones Inc",
      "description": "Label for the customer"
    },
    "external_platform": {
      "type": "object",
      "description": "External Identifiers for the customer",
      "nullable": true,
      "additionalProperties": {
        "type": "string"
      },
      "example": {
        "ax_customer_id": "eff3ada3-0966-42be-a5e8-78efd3c52d39"
      }
    },
    "status_map": {
      "type": "array",
      "description": "List of allowed statuses",
      "items": {
        "$ref": "./status.json"
      }
    }
  },
  "allOf": [
    {
      "$ref": "./entityCommon.json"
    }
  ]
}
