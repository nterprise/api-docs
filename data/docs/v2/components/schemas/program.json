{
  "x-id": "#program",
  "description": "Defines the properties for a program",
  "required": [
    "label",
    "customer",
    "program_id",
    "status_map"
  ],
  "properties": {
    "label": {
      "example": "GAP Store refresh",
      "description": "Name of the program"
    },
    "program_id": {
      "type": "string",
      "description": "Unique identifier",
      "example": "ec5db56d-32e6-4e5d-9bef-1016f3e13670",
      "readOnly": true,
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "customer": {
      "x-ref": "#customer",
      "description": "The customer this program is for",
      "allOf": [
        {
          "$ref": "./customer.json"
        }
      ]
    },
    "allowed_statuses": {
      "type": "array",
      "description": "List of allowed statuses",
      "items": {
        "$ref": "./status.json"
      }
    }
  },
  "allOf": [
    {
      "$ref": "./entityCommon.json"
    },
    {
      "$ref": "./dateRange.json"
    }
  ]
}
