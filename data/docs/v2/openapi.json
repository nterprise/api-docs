{
  "openapi": "3.0.0",
  "info": {
    "version": "2.0.0",
    "description": "API for the nterprise application",
    "title": "nterprise-api",
    "termsOfService": "https://docs.nterprise.com/tos.html",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://{environment}.nterprise.com",
      "variables": {
        "environment": {
          "default": "api",
          "enum": [
            "api",
            "api.dev"
          ]
        }
      }
    }
  ],
  "paths": {
    "/": {
      "$ref": "./paths/entry.json"
    },
    "/attachments": {
      "$ref": "./paths/attachments.json"
    },
    "/contacts": {
      "$ref": "./paths/contacts.json"
    },
    "/contacts/:contact_id": {
      "$ref": "./paths/contact.json"
    },
    "/contexts": {
      "$ref": "./paths/contexts.json"
    },
    "/contexts/:context_id": {
      "$ref": "./paths/context.json"
    },
    "/customers": {
      "$ref": "./paths/customer/customers.json"
    },
    "/customers/:customer_id": {
      "$ref": "./paths/customer/customer.json"
    },
    "/customers/:customer_id/contacts": {
      "$ref": "./paths/customer/contacts.json"
    },
    "/customers/:customer_id/contacts/:contact_id": {
      "$ref": "./paths/customer/contact.json"
    },
    "/customers/:customer_id/parts": {
      "$ref": "./paths/customer/parts.json"
    },
    "/customers/:customer_id/programs": {
      "$ref": "./paths/customer/programs.json"
    },
    "/customers/:customer_id/projects": {
      "$ref": "./paths/customer/projects.json"
    },
    "/customers/:customer_id/units": {
      "$ref": "./paths/customer/units.json"
    },
    "/dashboard": {
      "$ref": "./paths/dashboard.json"
    },
    "/locations": {
      "$ref": "./paths/locations.json"
    },
    "/locations/{location_id}": {
      "$ref": "./paths/location.json"
    },
    "/manufacturers": {
      "$ref": "./paths/manufacturer/manufacturers.json"
    },
    "/manufacturers/:manufacturer_id": {
      "$ref": "./paths/manufacturer/manufacturer.json"
    },
    "/manufacturers/:manufacturer_id/parts": {
      "$ref": "./paths/manufacturer/parts.json"
    },
    "/manufacturers/:manufacturer_id/units": {
      "$ref": "./paths/manufacturer/units.json"
    },
    "/me": {
      "$ref": "./paths/me.json"
    },
    "/parts": {
      "$ref": "./paths/parts.json"
    },
    "/parts/:part_id": {
      "$ref": "./paths/part.json"
    },
    "/programs": {
      "$ref": "./paths/program/programs.json"
    },
    "/programs/:program_id": {
      "$ref": "./paths/program/program.json"
    },
    "/programs/:program_id/projects": {
      "$ref": "./paths/program/projects.json"
    },
    "/projects": {
      "$ref": "./paths/projects.json"
    },
    "/projects/:project_id": {
      "$ref": "./paths/project.json"
    },
    "/units": {
      "$ref": "./paths/units.json"
    },
    "/units/:unit_id": {
      "$ref": "./paths/unit.json"
    },
    "/vendors": {
      "$ref": "./paths/vendor/vendors.json"
    },
    "/vendors/:vendor_id": {
      "$ref": "./paths/vendor/vendor.json"
    },
    "/vendors/:vendor_id/parts": {
      "$ref": "./paths/vendor/parts.json"
    },
    "/vendors/:vendor_id/units": {
      "$ref": "./paths/vendor/units.json"
    },
    "/work-flows": {
      "$ref": "./paths/workflow/workflows.json"
    },
    "/work-flows/:workflow_id": {
      "$ref": "./paths/workflow/workflow.json"
    },
    "/work-flows/:workflow_id/versions": {
      "$ref": "./paths/workflow/versions.json"
    }
  },
  "security": [
    {
      "oauth2": [
        "access"
      ]
    }
  ],
  "components": {
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://auth{.env}.nterprise.com/oauth/authorize",
            "tokenUrl": "https://auth{.env}.nterprise.com/oauth/token",
            "scopes": {
              "access": "Access the API"
            }
          }
        }
      }
    },
    "schemas": {
      "Contact": {
        "$ref": "./components/schemas/contact.json"
      },
      "Context": {
        "$ref": "./components/schemas/context.json"
      },
      "Customer": {
        "$ref": "./components/schemas/customer.json"
      },
      "Dashboard": {
        "$ref": "./components/schemas/dashboard.json"
      },
      "DateRange": {
        "$ref": "./components/schemas/dateRange.json"
      },
      "EntityCommon": {
        "$ref": "./components/schemas/entityCommon.json"
      },
      "InputFilter": {
        "$ref": "./components/schemas/inputFilter.json"
      },
      "Manufacturer": {
        "$ref": "./components/schemas/manufacturer.json"
      },
      "Me": {
        "$ref": "./components/schemas/me.json"
      },
      "Part": {
        "$ref": "./components/schemas/part.json"
      },
      "Problem": {
        "$ref": "./components/schemas/problem.json"
      },
      "Program": {
        "$ref": "./components/schemas/program.json"
      },
      "Project": {
        "$ref": "./components/schemas/project.json"
      },
      "Unit": {
        "$ref": "./components/schemas/unit.json"
      },
      "User": {
        "$ref": "./components/schemas/user.json"
      },
      "Vendor": {
        "$ref": "./components/schemas/vendor.json"
      },
      "Workflow": {
        "$ref": "./components/schemas/workflow.json"
      }
    }
  }
}
