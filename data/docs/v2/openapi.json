  "components": {
    "schemas": {
      "Me": {
        "$ref": "/v2/components/schemas/me.json"
      },
      "Permission": {
        "$ref": "/v2/components/schemas/permission.json"
      },
      "Role": {
        "$ref": "/v2/components/schemas/role.json"
      },
      "Problem": {
        "$ref": "/v2/components/schemas/problem.json"
      },
      "Entry": {
        "$ref": "/v2/components/schemas/entry.json"
      },
      "Login": {
        "$ref": "/v2/components/schemas/login.json"
